# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_DATABASE=n8n_clone

# Application Configuration
NODE_ENV=development
PORT=3000

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=n8n-clone
KAFKA_GROUP_ID=n8n-clone-group

# Logging
LOG_LEVEL=debug

# Webhook Configuration
WEBHOOK_URL=http://localhost:3000/webhook

# File Storage
STORAGE_PATH=./storage
MAX_FILE_SIZE=10MB

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@n8n-clone.com

# External Services
ENCRYPTION_KEY=your-encryption-key-for-credentials

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
