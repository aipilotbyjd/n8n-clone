      "@n8n-clone/domain-execution": ["libs/domain/execution/index.ts"],
      "@n8n-clone/domain-user": ["libs/domain/user/index.ts"],
      "@n8n-clone/domain-workflow": ["libs/domain/workflow/index.ts"],
      "@n8n-clone/infrastructure": ["libs/infrastructure/index.ts"],
      "@n8n-clone/shared": ["libs/shared/index.ts"],
      "@n8n-clone/application/user": ["libs/application/user/src/index.ts"]
